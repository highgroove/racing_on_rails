<% @page_title = "Admin: Disciplines" %>

<h2>Disciplines</h2>


<table>
  <tr>
    <th>Name</th>
    <th>Short Name</th>
  </tr>

  <p><b><%= link_to 'New discipline', new_admin_discipline_path %></b></p>

  <% for discipline in @disciplines %>
    <tr class="<%= cycle("even", "odd") %>">
      <td><%= discipline.name %></td>
      <td><%= discipline.short_name %></td>
      <td><%= link_to 'Edit', edit_admin_discipline_path(discipline.id)  %></td>
      <!--td><%= link_to 'Destroy', admin_discipline_path(discipline.id), :confirm => 'Are you sure?', :method => :delete %></td -->
    </tr>
  <% end %>
</table>

