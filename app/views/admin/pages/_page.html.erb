<%= content_tag :tr, :class => cycle("even", "odd") do %>
  <td>
    <%= editable page, :title %>
  </td>
  <td>
    <%= updated page %>
  </td>
  <td>
    <%= link_to "Add Child", new_admin_page_path(:page => { :parent_id => page.id }) %> |
    <%= link_to "Edit", edit_admin_page_path(page) %>
  </td>
<% end -%>

<%= render page.children %>
