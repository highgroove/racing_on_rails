<div class="content-item">
  <%= link_to(article.title, article, :class=>"title") %>
  <div class="story"><%= truncate(article.body.html_safe, :length=>140) %></div>
  <div class="timestamp">
    <ul>
      <li>Created: <%= article.created_at %></li>
      <li>Last modified: <%= article.updated_at %></li>
  </div>

</div>
