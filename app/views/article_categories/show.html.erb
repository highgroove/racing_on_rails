<%
  @page_title = "#{@article_category.name.capitalize}"

  if @article_categories.any? && @article_category.articles.any?
%>
    <h1>General</h1>
<%
  end
%>
  <%= render :partial => "article", :collection => @article_category.articles %>

<%
  for article_category in @article_categories
    if article_category.articles.any?
%>
      <h1><%= article_category.name %></h1>
      <%= render :partial => "article", :collection => article_category.articles %>
<%
    end
  end
%>
