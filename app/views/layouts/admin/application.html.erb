<!doctype html>
<!--[if lt IE 7 ]> <html class="no-js ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="no-js ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="no-js ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title>
      <%- if @page_title -%>
      <%= RacingAssociation.current.short_name %>: <%= @page_title -%>
      <%- else -%>
      <%= RacingAssociation.current.name %>
      <%- end %>
    </title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= csrf_meta_tag %>

    <%= render :partial => "layouts/stylesheets" %>
    <%= render :partial => "layouts/javascripts" %>
    <%= hoptoad_javascript_notifier %>
  </head>

  <body>
    <nav>
      <h1><%= link_to RacingAssociation.current.short_name, "/" %></h1>
      <%= link_to "Schedule", schedule_path, :class => "schedule" %><%= link_to "Results", results_path, :class => "results" %>
    </nav>

    <div class="content container">
      <%= render :partial => "shared/tabs" %>
      <%= render :partial => "shared/flash_messages" %>
  <%= yield %>
    </div>

    <footer>
      <%= link_to RacingAssociation.current.short_name, '/' %><%= link_to "Logout", person_session_path, :method => :delete, :id => "account_link" %>
    </footer>
  </body>
</html>

<% content_for :javascript_include_tag do -%>
  <%= javascript_include_tag "events" %>
  <%= javascript_include_tag "people" %>
<% end -%>
